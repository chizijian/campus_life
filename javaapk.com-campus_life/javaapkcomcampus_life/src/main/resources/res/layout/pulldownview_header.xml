<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/updatebar_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/updatebar_content_height" >

            <FrameLayout
                android:id="@+id/update_bar_content"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15.0dip" />
        </FrameLayout>

        <TextView
            android:id="@+id/update_bar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/updatebar_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/update_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_timeline" />

</LinearLayout>